# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ БОТА
# =============================================================================

# Токен бота от @BotFather (ОБЯЗАТЕЛЬНО)
BOT_TOKEN=your_bot_token_here

# ID канала для уведомлений (ОБЯЗАТЕЛЬНО)
CHANNEL_ID=@your_channel_username

# =============================================================================
# НАСТРОЙКИ WEBHOOK ДЛЯ TIMEWEB CLOUD
# =============================================================================

# Использовать webhook (рекомендуется для продакшена)
USE_WEBHOOK=true

# Базовый URL вашего приложения на Timeweb Cloud
WEBHOOK_BASE_URL=https://your-app-name.timeweb.cloud

# Путь для webhook (по умолчанию /webhook)
WEBHOOK_PATH=/webhook

# Секретный токен для webhook (рекомендуется для безопасности)
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# =============================================================================

# Настройки PostgreSQL (используйте внешнюю БД для продакшена)
DB_HOST=your_postgres_host
DB_PORT=5432
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=your_db_name

# =============================================================================
# НАСТРОЙКИ REDIS
# =============================================================================

# Настройки Redis (используйте внешний Redis для продакшена)
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASS=your_redis_password

# =============================================================================
# НАСТРОЙКИ АНАЛИТИКИ
# =============================================================================

# Sentry для отслеживания ошибок (опционально)
SENTRY_DSN=your_sentry_dsn

# Amplitude для аналитики (опционально)
AMPLITUDE_API_KEY=your_amplitude_api_key

# PostHog для аналитики (опционально)
POSTHOG_API_KEY=your_posthog_api_key

# =============================================================================
# НАСТРОЙКИ ИНТЕГРАЦИЙ
# =============================================================================

# Customer.io API (опционально)
CUSTOMERIO_API_KEY=your_customerio_api_key

# GBL Bonus API (опционально)
GBL_BONUS_API_URL=https://api.gbl-bonus.com
GBL_BONUS_API_KEY=your_gbl_bonus_api_key

# WS SV API (опционально)
WS_SV_API_URL=https://api.ws-sv.com
WS_SV_API_KEY=your_ws_sv_api_key

# =============================================================================
# НАСТРОЙКИ MINI-APPS
# =============================================================================

# URL для Fortune Wheel WebApp
FORTUNE_APP_URL=https://fortunewheelsinglefile.netlify.app/

# URL для NotCoin Mini App
NOTCOIN_APP_URL=https://your-domain.com/notcoin/

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# =============================================================================

# URL поддержки
SUPPORT_URL=https://t.me/your_support_channel

# Режим отладки
DEBUG=false

# Заглушка для интеграций (для тестирования)
INTEGRATIONS_STUB=false

# TTL токена email в минутах
EMAIL_TOKEN_TTL_MINUTES=15

# Лимит запросов для throttling
RATE_LIMIT=0.5
